#application-content
  @media (max-width: 768px)
    margin-top 60px
  @media (min-width: 1200px)
    margin-top 80px
.content-fluid
  @media (max-width: 768px)
    margin-top 50px
  @media (min-width: 1200px)
    margin-top 60px

#calendar-well
  @media (max-width: 768px)
    height 330px
  @media (min-width: 1200px)
    position fixed
    height 400px
    width 31%
.month-control
  padding 0
  padding-left 2px
#daily-events-well
  @media (min-width: 1200px)
    position fixed
    bottom 0
    overflow-y auto
    max-height 400px
    width 31%
#eventDateChoserList
  @media (min-width: 1200px)
    position relative
    bottom 0
    overflow-y auto
    height 100%

#createEventFloating
  z-index 50
  position fixed
  i
    top -2px !important
  @media (max-width: 768px)
    bottom 10px
    right 10px
  @media (min-width: 1200px)
    bottom 50px
    left 33%


a, .clickable
  color: inherit
  cursor: pointer
  &:hover
    color: #6BB0BA
    text-decoration: none

.big-text
  font-size: 1.5em

.big-text-lg
  @media (min-width: 1200px)
    font-size: 1.5em

.day
  .badge
    top -3px !important
    right -5px !important

.day
  &.active
    a
      background-color: inherit !important
      color: #000 !important
      &:hover
        background-color: #eee !important
        color: #000 !important

.event-details
  @media (min-width: 1200px)
    overflow-y auto

.event-name
  // all screens
  background-color: rgba(255, 255, 255, 0.4)
  color: #fff
  p
    color: #000
    font-size: 0.7em
  // xs
  @media (max-width: 768px)
    font-size: 1.5em
    margin-top: -50px
    color #000
    background-color #fff
  // lg
  @media (min-width: 1200px)
    margin-top: -100px
    font-size: 4em
.user-username
  // all screens
  background-color: rgba(255, 255, 255, 0.4)
  color: #fff
  p
    color: #000
    font-size: 0.7em
  // xs
  @media (max-width: 768px)
    font-size: 1.5em
    margin-top: -40px
  // lg
  @media (min-width: 1200px)
    margin-top: -100px
    font-size: 4em

.user-thumbnail
  position relative
  ul
    position absolute
    margin-left auto
    margin-right auto
    bottom 10px
    z-index 2
  @media (max-width: 768px)
    margin-top: -40px
  // sm
  @media (min-width: 768px)
    margin-top: -75px
  // md
  @media (min-width: 992px)
    margin-top: -90px
  // lg
  @media (min-width: 1200px)
    margin-top: -120px

.event-thumbnail
  position relative
  margin-left auto
  margin-right auto
  width 100%
  height 350px
  ul
    position absolute
    margin-left auto
    margin-right auto
    width 100%
    bottom 10px
    z-index 2
  @media (max-width: 768px)
    margin-top: -50px
  // sm
  @media (min-width: 768px)
    margin-top: -75px
  // md
  @media (min-width: 992px)
    margin-top: -90px

  @media (min-width: 1200px)
    margin-top: 0

.user-header, .event-header
  position relative
  padding 0
  ul
    position absolute
    top 10px
    right 10px
    z-index 2

  @media (max-width: 768px)
    width 100%
    height 100px
  @media (min-width: 1200px)
    width 100%
    height 350px

.invite-followers
  max-height 300px
  overflow auto

.user-line
  height 60px
  margin-bottom 10px
  i
    color green
  img
    height 55px
  label
    position relative
    bottom 15px

.event-description
  font-size: 1.5em

#locationPicker
  #map-canvas
    height: 300px
    width: 100%

.pac-container
    z-index: 1051 !important

.editable
  opacity: 0.8
  border-bottom: 1px dashed

.has-error
  color: #a94442

.user-events
  padding-top: 20px

.margin-xs-10
  @media (max-width: 768px)
    height: 10px
.margin-lg-10
  @media (min-width: 1200px)
    height: 10px

.search-item
  height: 80px
  width: 230px

.tt-dropdown-menu {
  background-color: #fff;
  border: 1px solid #ccc;
  border: 1px solid rgba(0, 0, 0, 0.2);
  border-radius: 0;
  box-shadow: 0 5px 10px rgba(0,0,0,.2);
}

.tt-suggestion {
  padding: 3px 20px;
  font-size: 18px;
  line-height: 24px;
}

.tt-suggestion a {
  margin: 0px;
  display: block;
  height: 100%;
}

.tt-suggestion.tt-cursor {
  color: #fff;
  background-color: #0097cf;
}
