body
  background: transparent

#signup-box
  .jumbotron
    padding-top: 30px

    form
      margin-bottom: 30px
#big-logo
  border: solid 2px white
  border-radius: 50%
  margin-top: 20%

.landing-text
  background: rgba(255,255,255,0.7)

#news-feed
  min-height: 600px

#currentDay
  font-size: 2em

#eventCreationDialog
  padding-top: 10px
  border: 1px solid #767D80
  border-radius: 5px

a, .clickable
  color: inherit
  cursor: pointer
  &:hover
    color: #6BB0BA
    text-decoration: none

.big-text
  font-size: 1.5em



.event-header, .user-header
  // xs
  @media (max-width: 768px)
    padding: 0

  .event-name, .user-username
    // all screens
    background-color: rgba(255, 255, 255, 0.4)
    color: #fff
    p
      color: #000
      font-size: 0.7em
    // xs
    font-size: 1.5em
    margin-top: -30px
    // md
    @media (min-width: 992px)
      margin-top: -70px
      font-size: 3em
    // lg
    @media (min-width: 1200px)
      margin-top: -100px
      font-size: 4em
  .event-thumbnail, .user-thumbnail
    // xs
    padding: 0
    margin-top: -40px
    // sm
    @media (min-width: 768px)
      margin-top: -75px
    // md
    @media (min-width: 992px)
      margin-top: -90px
    // lg
    @media (min-width: 1200px)
      margin-top: -120px

.event-description
  font-size: 1.5em
.event-details
  ul
    list-style-type: none
    li
      padding: 40px
      padding-left: 0
      padding-top: 0
#eventButtons
  position: fixed
  bottom: 50px
  right: 50px
  z-index: 3

.editable
  opacity: 0.8
  border-bottom: 1px dashed

.has-error
  color: #a94442

.event-line
  margin-top: 10px
  border-top: 1px solid grey