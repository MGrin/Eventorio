body
  background: transparent
// Sidebar styles
.menu
  width: 100%
  height: 100%
  background-color: #000
  color: #fff
  position: fixed;
  -webkit-transition: all 1s
  transition: all 1s
  left: 0
  z-index: 1
  overflow-y: auto
  padding-bottom: 100px
  &.closed
    left: -100%

#toggle
  z-index: 1
  background-color: inherit !important
  height: 35px
  position: fixed
  top: 0px
  left: -5px
  button
    margin: 0

#signup-box
  .jumbotron
    padding-top: 30px

    form
      margin-bottom: 30px

#monthly-calendar
  margin-top: 30px

#eventCreationDialog
  padding-top: 10px
  border: 1px solid #767D80
  border-radius: 5px

a, .clickable
  color: inherit
  cursor: pointer
  &:hover
    color: #6BB0BA
    text-decoration: none

// Calendar styles
.eventorio-badge
  opacity: 0.7
  background-color: orange
  z-index: -1 !important
  width: 85%
  height: 85%
  text-align: right
  // lg
  @media (min-width: 1200px)
    background-color: #5a90de
    opacity: 1
    z-index: 1 !important
    width: 100%
    height: inherit
    left: 0
    top: 0
    text-align: center
    &:after
      content: ' ev.'

.days
  .today
    background-color: #A1E6F0
  .day
    a
      &:hover
        background-color: #D2DAFF !important
  .active
    a
      background-color: inherit !important
      color: inherit !important
      &:hover
        color: inherit !important
// Done...

.event-header
  // xs
  @media (max-width: 768px)
    padding: 0

  .event-name
    // all screens
    background-color: rgba(255, 255, 255, 0.4)
    color: #fff
    p
      color: #000
      font-size: 0.7em
    // xs
    font-size: 1.5em
    margin-top: -30px
    // md
    @media (min-width: 992px)
      margin-top: -70px
      font-size: 3em
    // lg
    @media (min-width: 1200px)
      margin-top: -100px
      font-size: 4em
  .event-thumbnail
    // xs
    padding: 0
    margin-top: -40px
    // sm
    @media (min-width: 768px)
      margin-top: -75px
    // md
    @media (min-width: 992px)
      margin-top: -90px
    // lg
    @media (min-width: 1200px)
      margin-top: -120px

.event-description
  // sm
  @media (min-width: 768px)
    margin-top: -100px
  // md
  @media (min-width: 992px)
    margin-top: 0
  // lg
  @media (min-width: 1200px)
    font-size: 1.5em
    margin-top: -40px
