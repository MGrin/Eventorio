.row
  br.visible-xs

  label#currentDay.col-lg-12.hidden-xs
    span.col-lg-10.col-lg-offset-1.col-xs-12 {{dayStr}}:
    a.glyphicon.glyphicon-plus-sign.col-lg-1.pull-right(
      style="margin-top: 3px;"
      href='/events/new')

  label#currentDay.col-xs-12.visible-xs.text-center {{dayStr}}:

.row
  .col-lg-12
    .col-lg-10.col-lg-offset-1.text-center(ng-if="events.length === 0")
      h3(style="color: grey") No events for today.

    #daily-events.col-lg-11.col-lg-offset-1.col-xs-12(ng-if="events.length !== 0")
      .row(ng-repeat="event in events", event-line, event="event")
