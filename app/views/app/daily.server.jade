.row-fluid
  .col-xs-12(style="height: 15px")

  label#currentDay.col-lg-12.col-md-10.col-xs-10
    span.col-lg-10.col-lg-offset-1.col-md-10.col-sm-10.col-xs-10 {{dayStr}}:
    a#eventCreationDialogTrigger.glyphicon.glyphicon-plus-sign.col-lg-1.col-md-1.col-sm-1.col-xs-1.pull-right(
      style="margin-top: 3px;"
      href="#"
      data-toggle="modal"
      data-target="#eventCreationModal")

.row-fluid
  #day-events.col-lg-12.col-md-12
    .col-lg-10.col-lg-offset-1.col-md-8.col-md-offset-3.col-xs-12.text-center(ng-if="dayEvents.length === 0")
      h3(style="color: grey") No events for today.
    .table-responsive.col-lg-10.col-lg-offset-1.col-md-9.col-md-offset-2.col-sm-8.col-sm-offset-2.col-xs-10(ng-if="dayEvents.length !== 0")
      table.table.table-hover
        tr(ng-repeat="event in dayEvents")
          td
            a(href="{{event.url}}") {{event.name}}
          td
            a(href="{{event.url}}") {{event.location}}
          td.text-right
            a(href="/users/{{event.organizator.id}}") {{event.organizator.username}}

#eventCreationModal.modal.fade(tabindex='-1', role='dialog', aria-hidden='true')
  .modal-dialog
    .modal-content
      .modal-header
        button.close(type='button', data-dismiss='modal')
          span(aria-hidden='true') Ã—
          span.sr-only Close
        h4.modal-title Create a new Event!
      .modal-body
        form#eventCreationForm.form-horizontal(role="form")
          .form-group
            label.col-lg-3.control-label Name:
            .col-lg-9
              input.form-control(type="text", name="name", placeholder="ex. Trip-Hop Orchestra")
          .form-group
            label.control-label.col-lg-3 Location:
            .col-lg-9
              input.form-control(type="text", name="location", placeholder="ex. Metropole")
          .form-group
            label.control-label.col-lg-3 Description:
            .col-lg-9
              textarea.form-control(type="text", name="desc", placeholder="ex. Cool event!")
      .modal-footer
        button.btn.btn-default(type='button', data-dismiss='modal') Close
        button.btn.btn-primary(type='button', ng-click="createEvent()") Create
