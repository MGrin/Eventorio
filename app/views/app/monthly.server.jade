.row-fluid
  h1.hidden-xs.text-center
    | {{monthStr}}

  .visible-xs.col-xs-1.text-right.month-control
    a(href="#", ng-click="prevMonth()")
      h1.glyphicon.glyphicon-circle-arrow-left

  h3.visible-xs.col-xs-8.col-xs-offset-1.text-center
    | {{monthStr}}

  .visible-xs.col-xs-1.text-left.month-control
    a(href="#", ng-click="nextMonth()")
      h1.glyphicon.glyphicon-circle-arrow-right

#monthly-calendar.col-lg-12.col-md-12.col-sm-12.col-xs-12
  .col-lg-1.col-md-1.col-sm-1.hidden-xs.text-right.month-control
    a(href="#", ng-click="prevMonth()")
      h1.glyphicon.glyphicon-circle-arrow-left

  .responsive-calendar.col-lg-10.col-lg-offset-0.col-md-9.col-md-offset-1.col-sm-9.col-sm-offset-1.col-xs-12(ng-init="initMonthlyCalendar()")
    .day-headers
      .day.header Mon
      .day.header Tue
      .day.header Wed
      .day.header Thu
      .day.header Fri
      .day.header Sat
      .day.header Sun
    .days(data-group='days')

  .col-lg-1.col-md-1.col-sm-1.hidden-xs.text-left.month-control
    a.clickable(href="#", ng-click="nextMonth()")
      h1.glyphicon.glyphicon-circle-arrow-right
